{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "types": ["node", "electron"]
  },
  "include": ["src/index.ts", "src/preload.ts", "forge.config.js"],
  "exclude": ["vite.config.ts", "src/renderer/**/*"]
}